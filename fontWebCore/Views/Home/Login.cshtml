<div class="wrapper">
  <form class="login">
    <p class="title">登入</p>
    <input type="text" placeholder="身分證字號" autofocus required/>
    <i class="fa fa-user"></i>
    <input type="password" placeholder="密碼" required/>
    <i class="fa fa-key"></i>
    <div class="row no-gutters align-items-center">
        <div class="col-6">
            <input type="text" placeholder="驗證碼" style="width:95%" required/>
            <i class="fa fa-key" style="left: 10px;"></i>
        </div>
        <div class="col-6">
            <a class="btn btn-opposite text-white w-100" style="padding: 15px 10px; margin-bottom: 10px;">圖片驗證</a>
        </div>
    </div>
    <div class="d-flex justify-content-end">
        @* <a href="#" class="forget-passport">立即註冊</a> *@
        <a href="#" class="forget-passport">忘記密碼</a>
    </div>
    <p class="login-register">還沒有帳號？<a href="/Home/Register">立即註冊</a></p>
    <button onclick="location.href='/Home/MemberCenter'">
      <i class="spinner"></i>
      <span class="state">登入</span>
    </button>
  </form>
</div>

