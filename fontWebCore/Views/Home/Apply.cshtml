                        }
                    }
                });
            }
            $('#' + id + '_addregion').val(str);
            if (str != '') { getcitycode($('#' + id + '_addregion'), 'zipcode'); }
        }
        else {
            var id = $(obj).attr('id').replace('_addregion', '');
